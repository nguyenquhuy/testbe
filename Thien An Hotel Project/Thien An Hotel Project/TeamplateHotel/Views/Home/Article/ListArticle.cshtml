@using ProjectLibrary.Database
@using ProjectLibrary.Config
@using TeamplateHotel.Handler
@using TeamplateHotel.Controllers
@model IEnumerable<ProjectLibrary.Database.Article>
@{
    Layout = "~/Views/Shared/_Layout_home.cshtml";
    Menu menu = ViewBag.Menu ?? new Menu();
}

<div class="col-lg-9 col-md-8 col-sm-8">
    <h1 class="main-title  wow fadeInDown animated animated" style="visibility: visible; animation-name: fadeInDown;">
        @menu.Title
    </h1>
    @if (menu.ID == 1172 || menu.ID == 154)
    {
        foreach (var item in Model)
        {

            <div class="tour-sum wow fadeInDown animated" style="visibility: visible; animation-name: fadeInDown;">
                <div class="row">
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <img alt="" src="@item.Image" width="100%">
                    </div>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <h3 class="h4-title">
                            @item.Title
                        </h3>
                        <p>@Html.Raw(item.Description)</p>
                    </div>
                </div>
            </div>
        }

    }
    else
    {
        foreach (var item in Model)
        {
            <div class="tour-sum wow fadeInDown animated" style="visibility: visible; animation-name: fadeInDown;">
                <div class="row">

                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <a title="" class="thumbnail" href="/@item.MenuAlias/@item.ID/@item.Alias" style="position: relative;">
                            <img alt="" src="@item.Image">
                        </a>
                    </div>
                    <div class="col-md-8 col-sm-8 col-xs-12">
                        <h4 class="h4-title">
                            <a title="" href="/@item.MenuAlias/@item.ID/@item.Alias">@item.Title</a>
                        </h4>
                        <p>@Html.Raw(item.Description)</p>

                        <span class="booking"><a href="/@item.MenuAlias/@item.ID/@item.Alias">@GetLanguage.Language(Request.Cookies["LanguageID"].Value, "ViewDetail")</a></span>

                    </div>

                </div>
            </div>
        }

    }

</div>
@Html.Partial("Comment/SiteBar")
