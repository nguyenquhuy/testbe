            <a href="/lien-he">
                <input type="submit" name="" value="more about us">
            </a>
        </div>
    </div>
</div>

<!-- introduce rooms -->
<div class="container-fluid introduce">
    <p class="title">Feel yourself at home</p>
    <p class="detail">Book today and get 7% discount</p>
    <div class="book-btn">
        <a href="/phong-gia">
            <input type="submit" name="" value="our rooms & rates">
        </a>
    </div>
</div>

<!-- dining -->
<div class="container-fluid dining">
    <div class="container words">
        <p class="title">Exceptional dining</p>
        <div class="icon-title">
            <img src="~/Content/img/img/icon-title.png">
        </div>
        <p class="detail">On our scenic, quiet property, you will be treated to idyllic views of Beautiful Lake and its glistening water, our guardian mountains in the distance and luscious gardens.</p>
    </div>
    <div class="images container">
        <div class="row dining-slide">
            @foreach (var item in serviceShowHome)
            {
                <div class="col-12 dining-item" style="background-image: url(@item.Image);">
                    <div class="info">
                        <p class="title">@item.Title</p>
                        <p class="detail">
                            @item.Description
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- end dining -->
<!-- stats -->
