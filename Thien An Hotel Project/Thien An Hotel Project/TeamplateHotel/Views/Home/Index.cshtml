    </div>
</div>
<!-- end stats -->
<!-- blogs -->
<div class="container-fluid blogs">
    <div class="container title">
        <p>From Blogs</p>
        <div class="icon-title">
            <img src="~/Content/img/img/icon-title.png">
        </div>
    </div>
    <div class="container info">
        <div class="row">
            @foreach (var item in rooms.Take(4))
            {
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 col-12">
                    <div class="itemBox">
                        <div class="item">
                            <div class="img" style="background-image: url(@item.Image);"></div>
                            <div class="slice"></div>
                            <p class="info-title">@item.Title</p>
                            <p class="time">Feb 23,2016 <span><i class="fas fa-comment"></i> 0</span></p>
                            <div class="slice"></div>
                            <p class="detail">
                                @item.Description
                            </p>
                            <p class="more"><a href="#">Read More</a></p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="blog-btn">
            <a href="check-article.html">
                <input type="submit" name="" value="go to the blog">
            </a>
        </div>
    </div>
</div>
<!-- end blogs -->
