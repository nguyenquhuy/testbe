                    @foreach (var item in Model)
                    {

                        <div class="col-xl-6 col-lg-6 col-md-12">
                            <div class="row room-item">
                                <div class="col-xl-5 col-lg-5 col-md-5 col-sm-12 col-12 room-img" style="background-image: url(@item.Image);">
