                                                {
                                                    if (menuChild.Type == SystemMenuType.OutSite)
                                                    {
                                                        <li><a href="@menuChild.Link" title="@menuChild.Title" target="_blank">@menuChild.Title</a></li>
                                                    }
                                                    else
                                                    {
                                                        <li><a href="/@menuChild.Alias" title="@menuChild.Title">@menuChild.Title</a></li>
